<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity" >

    <View
        android:id="@+id/view_purple_square"
        android:layout_width="369dp"
        android:layout_height="560dp"
        android:foreground="@drawable/purple_square"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

    <TextView
        android:id="@+id/layout_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="69dp"
        android:fontFamily="sans-serif"
        android:text="Register to"
        android:textColor="#FFFCFC"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/activity_register_username"
        app:layout_constraintStart_toStartOf="@+id/view_purple_square"
        app:layout_constraintTop_toTopOf="@+id/view_purple_square"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="172dp"
        android:layout_height="184dp"
        app:layout_constraintBottom_toTopOf="@+id/activity_register_username"
        app:layout_constraintEnd_toEndOf="@+id/view_purple_square"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/layout_register"
        app:layout_constraintTop_toTopOf="@+id/view_purple_square"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/moodmate_logo" />

    <ImageView
        android:id="@+id/iv_character"
        android:layout_width="267dp"
        android:layout_height="324dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.604"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.971"
        app:srcCompat="@drawable/moodmate_character" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="237dp"
        android:layout_height="44dp"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="@+id/view_purple_square"
        app:layout_constraintEnd_toEndOf="@+id/view_purple_square"
        app:layout_constraintStart_toStartOf="@+id/view_purple_square"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_password"
        app:layout_constraintVertical_bias="0.243" />

    <EditText
        android:id="@+id/activity_register_username"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:background="@drawable/textbox"
        android:fontFamily="sans-serif"
        android:hint="Username"
        android:inputType="text"
        android:paddingHorizontal="16dp"
        android:textColor="@android:color/black"
        android:textColorHint="#767575"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_register_email"
        app:layout_constraintEnd_toEndOf="@+id/view_purple_square"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/view_purple_square"
        app:layout_constraintTop_toTopOf="@+id/view_purple_square"
        app:layout_constraintVertical_bias="0.881" />

    <EditText
        android:id="@+id/activity_register_email"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:background="@drawable/textbox"
        android:ems="10"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:shadowColor="#040404"
        android:textColor="#767575"
        android:textColorHint="#767575"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_purple_square"
        app:layout_constraintEnd_toEndOf="@+id/view_purple_square"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/view_purple_square"
        app:layout_constraintTop_toTopOf="@+id/view_purple_square"
        app:layout_constraintVertical_bias="0.496" />

    <EditText
        android:id="@+id/activity_register_password"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:background="@drawable/textbox"
        android:fontFamily="sans-serif"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingHorizontal="16dp"
        android:textColor="@android:color/black"
        android:textColorHint="#767575"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_email"
        app:layout_constraintVertical_bias="0.052" />

</androidx.constraintlayout.widget.ConstraintLayout>